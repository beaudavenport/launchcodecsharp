@{
    ViewBag.Title = "Beers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using STLTapReport.data;
@using STLTapReport.Models;
@model BeerStyleModel

<div class="bodyHead">
    <h1>Beers</h1>
</div>
<div class="bodyWrapper">
    <div class="introDiv">
        <h4 class="grayItal">Welcome to the STL Tap Report beer list. All beers are listed by style below:</h4>
    </div>
    <div id="beerPageView">
        @foreach (style m in Model.styles)
        {
            <h4>@m.name</h4>
            foreach (beer x in m.beers.ToList())
            {
                <div class="beerlist">
                    <h3>@x.name</h3>
                    <h5>ABV: @x.abv% <a class="linkSpan" href="@Url.Action("BeerProfile", new { BeerProfileId = x.beerID })">[visit profile page]</a></h5>
                </div>
            }
        }
    </div>
</div>
<div class="viewFooter">
    <h4>
        <a title="By edwin [CC-BY-2.0 (http://creativecommons.org/licenses/by/2.0)], via Wikimedia Commons" href="http://commons.wikimedia.org/wiki/File%3AFounders_Curmudgeon_(Old_Ale).jpg">
            <img width="45" alt="Founders Curmudgeon (Old Ale)" src="//upload.wikimedia.org/wikipedia/commons/thumb/5/5c/Founders_Curmudgeon_%28Old_Ale%29.jpg/256px-Founders_Curmudgeon_%28Old_Ale%29.jpg" />
        </a>
        The <em>Reinheitsgebot</em>, or German Beer Purity Law, was formed in 1487 and mandated that German beer contain only malt, barley and hops.
    </h4>
</div>