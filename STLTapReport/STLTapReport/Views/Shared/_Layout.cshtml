@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="../Content/StyleSheet1.css" rel="Stylesheet" type="text/css" />
</head>
<body>
    <div id="contentWrapper">
        <div id="mainHeader">
            <div id="headerText">
                  <a href="@Url.Action("Welcome", "Home")"><h1><strong>STL TAP REPORT</strong></h1></a>
            </div>
            <div id="login">
                <ul>
                    @if (!(Session["logged_in"] == null) && ((bool)Session["logged_in"]))
                    {
                        <li><img height="60px" width="30px" src="http://s3.amazonaws.com/btoimageupload/static/patio-guide/images/beer_medium.png" /></li>
                        <li><h3>Welcome back, @Session["name"]!</h3></li>
                    }
                    else
                    {
                        <li><img height="60px" width="35px" src="http://www.publicdomainfiles.com/images_view/2/13494514811992.png" /></li>
                        <li><h3><a href="@Url.Action("Login", "Account")">LOGIN</a></h3></li>
                    }
                </ul>
            </div>
        </div>

        <!-- Navigation Bar -->
        <div id="linkWrapper">
            <div class="navLink" id="beerLink">
                <h3><a href="/home/Beers">Beers</a></h3>
            </div>
            <div class="navLink" id="tapsLink">
                <h3>Taps</h3>
            </div>
            <div class="navLink" id="styleLink">
                <h3><a href="/home/Styles">Styles</a></h3>
            </div>
             <div id="beerSpotlight">
            <h3>Today's Spotlight beer:</h3>
            @Html.Partial("_FeatureBeer")
            </div>
        </div>

        <div id="mainContent">
            <!-- content management begins -->
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
